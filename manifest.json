{
  "manifest_version": 3,
  "name": "Postify - AI Social Poster",
  "version": "1.0.0",
  "description": "Transform your Gmail certificates into engaging social media posts with AI. Automatically scan Gmail for certificates and generate professional posts for LinkedIn and Twitter.",
  "permissions": [
    "identity",
    "storage",
    "scripting",
    "alarms"
  ],
  "oauth2": {
    "client_id": "__GOOGLE_CLIENT_ID__",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/assets/icon16.png",
      "48": "/assets/icon48.png",
      "128": "/assets/icon128.png"
    }
  },
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://api.openai.com/*",
    "https://api.linkedin.com/*",
    "https://api.twitter.com/*"
  ],
  "icons": {
    "16": "/assets/icon16.png",
    "48": "/assets/icon48.png",
    "128": "/assets/icon128.png"
  }
}